<html lang="en">

<head>
  <link rel='shortcut icon' type="image/png" href='/img/title/icon-shop.png' />
  <title>Đặt lại mật khẩu</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
  <link rel="stylesheet" href="/css/style_login.css" />

</head>

<body style="background-image: url(/img/background/bg-signup.jpg); background-size: cover;">
  <section class="ftco-section">
    <div class="container">
      <div class="login-content">
        <h1 class="title">Đặt lại mật khẩu</h1>
        {{#if message}}
        <div class="alert alert-success" role="alert">
          {{message}}
        </div>
        {{/if}}

        {{#if error}}
        <div class="alert alert-warning" role="alert">
          {{error}}
        </div>
        {{/if}}

        <form method="POST" action="/reset-password">
          <input type="hidden" name="id" value="{{id}}" />

          <div class="form-group">
            <div class="icon d-flex align-items-center justify-content-center"><i class="fas fa-lock"
                style="color: white;"></i>
            </div>
            <input name="password" type="password" class="form-control rounded-left" placeholder="Nhập mật khẩu mới"
              required />
          </div>

          <div class="form-group">
            <div class="icon d-flex align-items-center justify-content-center"><i class="fas fa-lock"
                style="color: white;"></i>
            </div>
            <input name="confirm_password" type="password" class="form-control rounded-left"
              placeholder="Nhập lại mật khẩu mới" required />
          </div>

          <div>
            <div class="w-100 d-flex justify-content-center">
              <button value="Log In" type="submit" class="btn btn-primary rounded submit">Gửi</button>
            </div>
          </div>
          <div class="w-100 text-center signuphere">
            <p class="mb-1">Không Có Tài Khoản?
              <a href="/register">Đăng ký</a>
            </p>
            <p><a href="/login">Đăng nhập</a></p>
          </div>
        </form>
      </div>
    </div>
  </section>
</body>

</html>